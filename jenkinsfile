pipeline {
    agent any

    parameters {
        booleanParam(
            name: 'SKIP_SCANS',
            defaultValue: false,
            description: 'Skip all scan stages (OWASP, Sonar QC)'
        )
    }

    tools {
        jdk 'jdk17'
        nodejs 'nodejs16'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
    }

    stages {
        stage('git checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/mehtasumti/Swiggy-clone.git'
            }
        }

        stage('sonarqube') {
            steps {
                withSonarQubeEnv('sonar') {
                    sh """
                        \"${SCANNER_HOME}/bin/sonar-scanner\" \
                          -Dsonar.projectName=sonar-token \
                          -Dsonar.projectKey=sonar-token \
                          -Dsonar.sources=.
                    """
                }
            }
        }

        stage('quality gates') {
            when { expression { !params.SKIP_SCANS } }
            steps {
                script {
                    waitForQualityGate abortPipeline: false, credentialsId: 'sonar-token'
                }
            }
        }

        stage('npm dependency') {
            steps {
                sh 'npm install'
            }
        }

        stage('OWASP') {
            when { expression { !params.SKIP_SCANS } }
            steps {
                dependencyCheck additionalArguments: '--scan ./ --disableYarnAudit --disableNodeAudit', odcInstallation: 'DC'
                dependencyCheckPublisher pattern: '**/dependency-check-report.xml'
            }
        }

        stage('trivy fs scan') {
            steps {
                sh 'trivy fs . > trivy-fs.txt'
            }
        }

        stage('docker build & docker push') {
            steps {
                withDockerRegistry(credentialsId: 'docker', url: 'https://index.docker.io/v1/') {
                    sh 'docker build -t mehtasumti/swiggy-app:latest .'
                    sh 'docker push mehtasumti/swiggy-app:latest'
                }
            }
        }

        stage('trivy image scan') {
            steps {
                sh 'trivy image mehtasumti/swiggy-app:latest > trivy-img.json'
            }
        }

        stage('Cleanup old Docker container') {
            steps {
                sh '''
                    docker rm -f swiggy-app || true
                    docker rmi mehtasumti/swiggy-app:latest || true
                '''
            }
        }

        stage('Pull Docker Image') {
            steps {
                sh 'docker pull mehtasumti/swiggy-app:latest'
            }
        }

        stage('Run Docker Container') {
            steps {
                sh 'docker run -d --name swiggy-app -p 3000:3000 mehtasumti/swiggy-app:latest'
            }
        }

        stage('Show Running Containers') {
            steps {
                sh 'docker ps'
            }
        }
    }
}
